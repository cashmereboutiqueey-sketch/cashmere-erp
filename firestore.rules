rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return getUserRole() == 'admin';
    }

    function isProduction() {
      return getUserRole() in ['admin', 'production'];
    }

    function isSales() {
        return getUserRole() in ['admin', 'sales'];
    }

    function isAccountant() {
        return getUserRole() in ['admin', 'accountant'];
    }

    // Rules for each collection
    match /users/{userId} {
      allow read: if isAuth();
      allow create, update, delete: if isAdmin();
    }

    match /suppliers/{supplierId} {
      allow read: if isProduction() || isAccountant();
      allow create: if isProduction();
      allow update, delete: if isAdmin();
    }

    match /customers/{customerId} {
        allow read: if isSales() || isAccountant();
        allow create: if isSales();
        allow update, delete: if isAdmin();
    }

    match /products/{productId} {
        allow read: if isAuth(); // All authenticated users can see products
        allow create, update, delete: if isProduction();
    }

    match /product_fabrics/{productFabricId} {
        allow read, create, update, delete: if isProduction();
    }

    match /orders/{orderId} {
        allow read: if isAuth();
        allow create: if isSales();
        allow update, delete: if isAdmin();
    }

    match /production_orders/{productionOrderId} {
        allow read: if isProduction();
        allow create, update, delete: if isProduction();
    }

    match /fabrics/{fabricId} {
        allow read: if isProduction() || isAccountant();
        allow create, update, delete: if isProduction();
    }

    match /expenses/{expenseId} {
        allow read: if isAccountant();
        allow create: if isAccountant();
        allow update, delete: if isAdmin();
    }

    match /notifications/{notificationId} {
      allow read, write: if isAuth();
    }
    
    match /workers/{workerId} {
        allow read, write: if isProduction();
    }

    match /work_logs/{workLogId} {
        allow read, write: if isProduction();
    }

  }
}
