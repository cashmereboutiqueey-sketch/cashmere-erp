rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get user's role
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Admins can do anything
    function isAdmin() {
      return getUserRole(request.auth.uid) == 'admin';
    }

    // Rules for 'users' collection
    // Users can read their own data. Admins can read anyone's data.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin(); // Only admins can change roles
    }

    // Rules for 'customers' collection
    // Sales and Admins can manage customers
    match /customers/{customerId} {
      allow read, write: if isAdmin() || getUserRole(request.auth.uid) == 'sales';
    }

    // Rules for 'products' collection
    // Production, Warehouse Managers, and Admins can manage products.
    // Sales can read products (for POS).
    match /products/{productId} {
      allow read: if request.auth.uid != null; // Everyone logged in can see products
      allow write: if isAdmin() || getUserRole(request.auth.uid) in ['production', 'warehouse_manager'];
    }
    
    // Rules for 'fabrics' collection
    // Production and Admins can manage fabrics.
    match /fabrics/{fabricId} {
        allow read, write: if isAdmin() || getUserRole(request.auth.uid) == 'production';
    }
    
    // Rules for 'suppliers' collection
    // Production and Admins can manage suppliers.
     match /suppliers/{supplierId} {
        allow read, write: if isAdmin() || getUserRole(request.auth.uid) == 'production';
    }

    // Rules for 'orders' collection
    // Sales and Admins can create/update orders.
    match /orders/{orderId} {
      allow read, write: if isAdmin() || getUserRole(request.auth.uid) == 'sales';
    }
    
    // Rules for 'production_orders' collection
    // Production and Admins can manage production orders.
    match /production_orders/{productionOrderId} {
        allow read, write: if isAdmin() || getUserRole(request.auth.uid) == 'production';
    }

    // Rules for 'expenses' collection
    // Accountants and Admins can manage expenses.
    match /expenses/{expenseId} {
      allow read, write: if isAdmin() || getUserRole(request.auth.uid) == 'accountant';
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
