rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isAccountant() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'accountant';
    }

    function isSales() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sales';
    }

    function isProduction() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'production';
    }

    function isWarehouseManager() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'warehouse_manager';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // Collection Rules
    match /users/{userId} {
      // Admins can manage any user. Users can read their own data.
      allow read, write: if isAdmin() || isOwner(userId);
    }
    
    match /customers/{customerId} {
      allow read, write: if isAdmin() || isSales();
    }
    
    match /products/{productId} {
      // Production and Warehouse can manage products. Other roles can read.
      allow read: if isSignedIn();
      allow write: if isAdmin() || isProduction() || isWarehouseManager();
    }
    
    match /fabrics/{fabricId} {
      // Production can manage fabrics. Other roles can read.
      allow read: if isSignedIn();
      allow write: if isAdmin() || isProduction();
    }
    
    match /suppliers/{supplierId} {
      // Admin and Production can manage suppliers.
      allow read, write: if isAdmin() || isProduction();
    }
    
    match /orders/{orderId} {
      // Sales can create orders. Admins can manage them.
      allow read: if isSignedIn();
      allow write: if isAdmin() || isSales();
    }
    
    match /production_orders/{productionOrderId} {
      // Production can manage production orders.
      allow read: if isSignedIn();
      allow write: if isAdmin() || isProduction();
    }

    match /workers/{workerId} {
      allow read, write: if isAdmin() || isProduction();
    }
     match /work_logs/{workLogId} {
      allow read, write: if isAdmin() || isProduction();
    }
    
    match /expenses/{expenseId} {
      // Accountants and Admins can manage expenses
      allow read, write: if isAdmin() || isAccountant();
    }
    
    match /product_fabrics/{productFabricId} {
      // This is managed via product updates.
      allow read: if isSignedIn();
      allow write: if isAdmin() || isProduction() || isWarehouseManager();
    }

    match /notifications/{notificationId} {
        allow read, write: if isSignedIn();
    }
  }
}
